<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    @_RenderTitle()
    @_RenderMeta()
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/Content/Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/animate.css" rel="stylesheet" />
    <link href="~/Content/Styles/hplus.css" rel="stylesheet" />
    <link href="~/Content/Styles/hplus_extend.css" rel="stylesheet" />
</head>
<body class="fixed-sidebar full-height-layout gray-bg" style="overflow:hidden">
    <div id="wrapper">
        <!--左侧导航开始-->
        @Html.Partial("_Navigation")
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="index_v1.html">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        关闭操作<span class="caret"></span>
                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
                <a href="login.html" class="roll-nav roll-right J_tabExit"><i class="fa fa fa-sign-out"></i> 退出</a>
            </div>
            <div class="row J_mainContent" id="content-main">
                <div class="ibox">
                    @RenderBody()
                </div>
            </div>
            <div class="footer">
                <div class="pull-right">
                    &copy; 2014-2015 <a href="http://www.zi-han.net/" target="_blank">zihan's blog</a>
                </div>
            </div>
        </div>
        <!--右侧部分结束-->
    </div>
    <!-- 全局js -->
    <script src="~/Content/Scripts/jquery/jquery-3.1.1.min.js"></script>
    <script src="~/Content/Scripts/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/jquery/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/Scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/Scripts/plugins/layer/layer.min.js"></script>
    <script src="~/Content/Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- 自定义js -->
    <script src="~/Content/Scripts/hplus.js"></script>
    <script src="~/Content/Scripts/contabs.js"></script>
    <!-- 第三方插件 -->
    <script src="~/Content/Scripts/plugins/pace/pace.min.js"></script>
</body>
</html>