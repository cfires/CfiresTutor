@model  UserLoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <title>龙腾家教网后台 - 登录</title>
    <meta name="keywords" content="龙腾家教网">
    <meta name="description" content="龙腾家教网">

    <link href="~/Content/Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/Default.css" rel="stylesheet" />
    <link href="~/Content/Styles/hplus.css" rel="stylesheet" />
    <link href="~/Content/Styles/hplus_extend.css" rel="stylesheet" />
    <link href="~/Content/Styles/Site.css" rel="stylesheet" />

    <script src="~/Content/Scripts/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/jquery/jquery-3.1.1.min.js"></script>
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h3 class="logo-name">龙腾</h3>
            </div>
            <h3>欢迎进入龙腾家教网后台</h3>
            @using (Html.BeginForm("Login", "User", new { returnUrl = ViewData["returnUrl"] }, FormMethod.Post, new { @class = "m-t" }))
            {
                @Html.ValidationMessage("Validate", new { @class = "text-left" })
                <div class="form-group">
                    @Html.TextBoxFor(u => u.LoginName, new { @class = "form-control", placeholder = "用户名" })
                    @Html.ValidationMessageFor(u => u.LoginName, "", new { @class = "text-left" })
                </div>
                    <div class="form-group">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "密码" })
                        @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-left" })
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            }
        </div>
    </div>
</body>
</html>
